{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@api/*": ["api/*"],
      "@auth/*": ["auth/*"],
      "@users/*": ["users/*"],
      "@auctions/*": ["auctions/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@middleware/*": ["middleware/*"]
    },
  },
  "include": ["src"]
}
